<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="SpeakableTextPresentCheck"
    android:background="@drawable/background"
    android:layout_margin="10dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prof_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
               android:scaleType="centerInside"
                android:background="@color/white"
                tools:srcCompat="@drawable/add_userphoto" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Your image"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"/>

            <TextView
                android:id="@+id/fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/name"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_name_dialog"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/enter_name"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:padding="8dp"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/email"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold"
               />
            <EditText
                android:id="@+id/edit_email_dialog"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/enter_email"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:padding="8dp"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/BRITH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/d_of_b"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_DOB"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/date"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/nationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/id"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold"
               />

            <EditText
                android:id="@+id/edit_Nid"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/enter_id"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="number"
                android:padding="8dp"
                android:background="@color/white"
                />

            <TextView
                android:id="@+id/Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="@string/phone"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/edit_phone_dialog"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/phone_number"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="number"
                android:padding="8dp"
                android:background="@color/white"
                tools:ignore="TextFields" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:id="@+id/Age"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"/>
            <EditText
                android:id="@+id/edit_age"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/enter_age"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="number"
                android:padding="8dp"
                android:background="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:id="@+id/Gender"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"/>
            <EditText
                android:id="@+id/edit_gender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/enter_gender"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="text"
                android:padding="8dp"
                android:background="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:id="@+id/weight"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"/>
            <EditText
                android:id="@+id/edit_weight_dialog"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/weight"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:background="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:id="@+id/Height"
                android:textStyle="bold"
                android:textColor="@color/darkblue"
                android:textSize="24sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"/>
            <EditText
                android:id="@+id/edit_height"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/height"
                android:textColorHint="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:background="@color/white"
                />
            <Button
                android:id="@+id/update_profile"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_margin="25dp"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/pencil"
                android:text="@string/update" />

        </LinearLayout>

</ScrollView>